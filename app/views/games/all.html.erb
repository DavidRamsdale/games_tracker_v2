<p id="notice"><%= notice %></p>

<h1>All the games</h1>

<p>Hello <%= current_user.name%>, would you like to join a game? </p>

<table>
  <thead>
    <tr>
      <th>Place</th>
      <th>Date</th>
      <th>Time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    
    <% @games.each do |game| %>
      <tr>
        <td><%= game.place %></td>
        <td><%= game.date %></td>
        <td><%= game.time %></td>
        <td><%= game.user.name %></td>
        <td><%= link_to 'Join', challengers_path(challenger: {user_id: current_user.id, game_id: game.id}), method: :post %></td>
        <td><%#= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
<%= link_to 'Back', games_path %>
